<Window x:Class="Lab_10.ChangeStyleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Style" Height="150" Width="300">
    <Grid Background="{DynamicResource windowStyle}">
        <Label Content="Change color style"
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Height="25" Margin="31,40,0,0" />
        <ComboBox x:Name="cmbChangeStyle"
                  HorizontalAlignment="Left" VerticalAlignment="Top"
                  Width="120" Height="25" Margin="144,40,0,0"
                  SelectionChanged="cmbChangeStyle_SelectionChanged"/>
    </Grid>
</Window>
